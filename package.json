{
  "name": "fleet-management-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@fleet/web",
    "dev:mobile": "cd apps/mobile && yarn start",
    "dev:marketing": "turbo run dev --filter=@fleet/marketing",
    "mobile": "cd apps/mobile && yarn start",
    "mobile:ios": "cd apps/mobile && yarn ios",
    "mobile:android": "cd apps/mobile && yarn android",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@fleet/web",
    "build:marketing": "turbo run build --filter=@fleet/marketing",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "prepare": "husky",
    "deploy:dev:marketing": "cd apps/marketing && vercel",
    "deploy:preview:marketing": "cd apps/marketing && vercel",
    "deploy:prod:marketing": "cd apps/marketing && vercel --prod",
    "deploy:dev:web": "cd apps/web && vercel",
    "deploy:preview:web": "cd apps/web && vercel",
    "deploy:prod:web": "cd apps/web && vercel --prod",
    "deploy:preview": "yarn deploy:preview:marketing && yarn deploy:preview:web",
    "deploy:prod": "yarn deploy:prod:marketing && yarn deploy:prod:web"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "shadcn": "^3.3.1"
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
